<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="view1">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">193dp</item>
        <item name="android:layout_alignParentBottom">true</item>
        <item name="android:layout_alignParentStart">true</item>
        <item name="android:layout_marginBottom">14dp</item>
        <item name="android:background">#d3d3d3</item>
    </style>

    <style name="text_view1">
        <item name="android:id">@id/textView1</item>
        <item name=" android:layout_width">239dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_alignParentStart">true</item>
        <item name="android:layout_alignTop">@+id/imageView</item>
        <item name="android:fontFamily">cursive</item>
        <item name="android:text">Clark Kent</item>
        <item name="android:textColor">#000000</item>
        <item name="android:textSize">30sp</item>
        <item name="android:layout_width">245dp</item>
    </style>

    <style name="text_view2">
        <item name="android:layout_width">241dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_above">@+id/textView2</item>
        <item name="android:layout_alignParentStart">true</item>
        <item name="android:fontFamily">casual</item>
        <item name="android:text">Reporter</item>
        <item name="android:textSize">24sp</item>
    </style>

    <style name="text_view3">
        <item name="android:layout_width">237dp</item>
        <item name="android:layout_height">100dp</item>
        <item name="android:layout_alignParentStart">true</item>
        <item name="android:text">Very quiet bespectacled reporter at Daily Planet. Clumsy fellow, but well built and looks strongly familiar. Wonder which celebrity he looks like.</item>
        <item name="android:textSize">16sp</item>
        <item name="android:layout_alignParentTop">true</item>
        <item name="android:layout_marginTop">80dp</item>
    </style>

    <style name="view2">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">185dp</item>
        <item name="android:layout_alignParentStart">true</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:background">#d3d3d3</item>
    </style>

    <style name="text_view4">
        <item name="android:layout_width">253dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_above">@+id/textView5</item>
        <item name="android:layout_alignParentStart">true</item>
        <item name="android:fontFamily">cursive</item>
        <item name="android:text">Bruce Wayne</item>
        <item name="android:textColor">#000000</item>
        <item name="android:textSize">30sp</item>
    </style>

    <style name="text_view5">
        <item name="android:layout_width">251dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_above">@+id/textView6</item>
        <item name="android:layout_alignParentStart">true</item>
        <item name="android:fontFamily">casual</item>
        <item name="android:text">Billionaire</item>
        <item name="android:textSize">24sp</item>
    </style>

    <style name="text_view6">
        <item name="android:layout_width">253dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_alignParentBottom">true</item>
        <item name="android:layout_alignParentStart">true</item>
        <item name="android:layout_marginBottom">216dp</item>
        <item name="android:text">Incredibly smart billionaire industrialist and notorious playboy. Also very reclusive. Also most certainly the batman.</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="text_view7">
        <item name="android:layout_width">255dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_above">@+id/textView8</item>
        <item name="android:layout_alignParentStart">true</item>
        <item name="android:fontFamily">cursive</item>
        <item name="android:text">Barrack Obama</item>
        <item name="android:textColor">#000000</item>
        <item name="android:textSize">30sp</item>
    </style>

    <style name="text_view8">
        <item name="android:layout_width">255dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_above">@+id/textView9</item>
        <item name="android:layout_alignParentStart">true</item>
        <item name="android:layout_alignParentBottom">true</item>
        <item name="android:layout_marginBottom">216dp</item>
        <item name="android:text">President of the USA</item>
        <item name="android:textSize">24sp</item>
    </style>

    <style name="text_view9">
        <item name="android:layout_width">255dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:text">44th President of the USA. Recipient of the Nobel Prize (although no one is quite certain what exactly for. Suspected of being Black.</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="view3">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">202dp</item>
        <item name="android:layout_alignParentStart">true</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:background">#d3d3d3</item>
    </style>

</resources>
